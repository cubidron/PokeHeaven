{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PhynariaMC",
  "version": "1.0.0",
  "identifier": "com.cubidron.phynaria",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PhynariaMC Launcher",
        "width": 1024,
        "height": 768,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "transparent": true,
        "decorations": false,
        "userAgent": "Cubidron Apps",
        "windowEffects": {
          "effects": [],
          "radius": 10
        }
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": "default-src * 'unsafe-inline' 'unsafe-eval'; frame-src https://www.youtube.com;"
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "macOS": {
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFEQzYzNTIwMjM0OTdGRkEKUldUNmYwa2pJRFhHSFZuaWc5V0gvUGpHTzRyUXEwUnoxaDdqWXUrc2pqUTVhbFdwT2tBbkY1U3cK",
      "endpoints": [
        "https://launcher.phynaria.fr/www/PhynariaLauncherV2/config.json"
      ]
    }
  }
}
